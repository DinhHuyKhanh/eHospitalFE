    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn khoa khám:"
            android:id="@+id/tvKhoaKham"
            android:textSize="20dp"
            android:textColor="@color/black" />

        <Spinner
            android:id="@+id/spinnerKhoaKham"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="0dp">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginRight="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvBacSi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chọn bác sĩ:"
            android:textColor="@color/black"
            android:textSize="20dp" />

        <Spinner
            android:id="@+id/spinnerBacSi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="0dp">

        </Spinner>

    </LinearLayout>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Trong vòng 24h bv sẽ xác nhận lịch hẹn.
Bệnh nhân cần trợ giúp hãy liên hệ
Hotline: 1900561252" />
    <Button

        android:layout_marginTop="30dp"
