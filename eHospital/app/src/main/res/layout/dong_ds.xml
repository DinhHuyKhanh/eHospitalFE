<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/blue_white"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginStart="10dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:id="@+id/liner1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/col1Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Họ và tên: "
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/col2Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="10dp"
                android:textSize="20dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/liner2"
            android:layout_below="@id/liner1"
            android:layout_marginTop="5dp"
            >
            <TextView
                android:id="@+id/col1Date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ngày hẹn: "
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/col2Date"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/liner3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/liner2"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/col1Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trạng Thái"
                android:textSize="20dp"
                android:textColor="@color/black"
                />

            <TextView
                android:id="@+id/col2Status"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text=""
                android:textSize="20dp"
                android:layout_marginLeft="10dp"
                android:textColor="@color/black"
                />
        </LinearLayout>

        <Button
            android:id="@+id/detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liner3"
            android:layout_alignParentRight="true"
            android:layout_marginTop="5dp"
            android:background="@color/blue_white"
            android:minHeight="48dp"
            android:text="Chi tiết"
            android:textColor="@color/hiad_video_progress_blue"
            android:textSize="10dp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>