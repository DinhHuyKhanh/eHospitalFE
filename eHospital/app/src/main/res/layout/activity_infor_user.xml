<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InforUser">
    <LinearLayout
        android:background="@color/green_8"
        android:layout_width="match_parent"
        android:padding="5dp"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/imgBackInfor"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@null"
            android:src="@drawable/baseline_arrow_back_20"
            tools:ignore="SpeakableTextPresentCheck" />
        <TextView
            android:layout_marginLeft="2dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tviewInfor"
            android:textColor="@color/black"
            android:text="Thông tin bệnh nhân"
            android:textSize="22sp"
            />
    </LinearLayout>
        <RadioGroup
            android:layout_marginTop="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/clickCC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                 android:layout_marginLeft="50dp"
                android:text="Chính chủ" />

            <RadioButton
                android:textColor="@color/black"
                android:textSize="18sp"
                android:id="@+id/clickDH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="75dp"

                android:text="Đặt hộ" />
        </RadioGroup>
    <LinearLayout

        android:layout_marginTop="15dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Họ và tên: "
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="51dp"
             />
    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày sinh: "
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editBirth"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="48dp"
             />
    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giới tính: "
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editGioiTinh"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="61dp"
           />
    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ: "
            android:textSize="18sp"
            android:textColor="@color/black"
            />

        <EditText
            android:id="@+id/editDiaChi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="73dp"
             />
    </LinearLayout>
    <LinearLayout

        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SĐT liên hệ: "
            android:textColor="@color/black"
            android:textSize="18sp"
            />

        <EditText
            android:id="@+id/editSDT"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="38dp"
             />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="italic"
        android:text="Trong vòng 24h bv sẽ xác nhận lịch hẹn.
Bệnh nhân cần trợ giúp hãy liên hệ
Hotline: 1900561252" />
    <Button

        android:layout_marginTop="30dp"
        android:layout_width="108dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="262dp"
        android:background="@color/green_8"
        android:id="@+id/btnDatLich"
        android:text="Đặt lịch"
        android:textColor="#000" />

</LinearLayout>